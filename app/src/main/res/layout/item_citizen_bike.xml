<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:drawable/editbox_background"
    android:padding="10dp"
    android:layout_margin="8dp">

    <!-- Bike Image -->
    <ImageView
        android:id="@+id/ivBikeImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@android:drawable/gallery_thumb"/>

    <!-- Bike Name -->
    <TextView
        android:id="@+id/tvBikeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:paddingTop="8dp"
        android:text="Bike Name"/>

    <!-- Bike Type -->
    <TextView
        android:id="@+id/tvBikeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333333"
        android:paddingTop="4dp"
        android:text="Bike Type"/>

    <!-- Rental Price -->
    <TextView
        android:id="@+id/tvBikePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FF5722"
        android:paddingTop="4dp"
        android:text="Price per Hour"/>

    <!-- Rent Now Button -->
    <Button
        android:id="@+id/btnRentBike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rent Now"
        android:textAllCaps="false"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>
</LinearLayout>
