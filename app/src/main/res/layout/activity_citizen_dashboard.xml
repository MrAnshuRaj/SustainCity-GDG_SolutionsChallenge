 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#E8F5E9"
     android:id="@+id/main"
    android:gravity="center">

            <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome, Citizen!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#2E7D32"/>  <!-- Dark Green -->

            <Button
            android:id="@+id/btnFileComplaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File a Complaint"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"/>

            <Button
            android:id="@+id/btnViewEvents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Cleaning Events"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

            <Button
            android:id="@+id/btnDonateFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Donate Excess Food"
            android:backgroundTint="#43A047"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

            <Button
            android:id="@+id/btnReadBlogs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read Sustainability Blogs"
            android:backgroundTint="#1B5E20"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

            <Button
            android:id="@+id/btnBikeRental"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rent a Bike"
            android:backgroundTint="#1B5E20"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>

            <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

